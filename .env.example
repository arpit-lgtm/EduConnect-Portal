# Hugging Face API Configuration
NEXT_PUBLIC_HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# AI Mode Options:
# - 'hybrid': Use knowledge base for exact matches, AI for complex queries (RECOMMENDED)
# - 'ai-only': All responses from AI (experimental, may hallucinate)
# - 'knowledge-base': No AI, only hardcoded responses
NEXT_PUBLIC_USE_AI_MODE=ai-only

# MongoDB Configuration
# Replace with your MongoDB Atlas connection string or local MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# MSG91 SMS OTP Configuration
# Get AUTH_KEY from your MSG91 dashboard: https://www.msg91.com/settings
MSG91_AUTH_KEY=your_msg91_auth_key_here
# Set your MSG91 OTP template ID (required for DLT compliance in India)
MSG91_OTP_TEMPLATE_ID=your_template_id_here
# Sender ID (the approved header/DLT sender ID)
MSG91_SENDER=YOUR_SENDER_ID

# MSG91 SMTP Email OTP Configuration
# Get these from MSG91 dashboard: https://msg91.com/settings
MSG91_SMTP_HOST=smtp.mailer91.com
MSG91_SMTP_PORT=587
MSG91_SMTP_USER=your_smtp_username_here
MSG91_SMTP_PASS=your_smtp_password_here
MSG91_FROM_EMAIL=your_from_email@example.com
MSG91_FROM_NAME=Your App Name

# Admin Secret Key (for admin authentication)
ADMIN_SECRET_KEY=your_secure_admin_secret_key_here
