# Hugging Face API Configuration
NEXT_PUBLIC_HUGGINGFACE_API_KEY=your_hf_token_here

# AI Mode Options:
# - 'hybrid': Use knowledge base for exact matches, AI for complex queries (RECOMMENDED)
# - 'ai-only': All responses from AI (experimental, may hallucate)
# - 'knowledge-base': No AI, only hardcoded responses (current behavior)
NEXT_PUBLIC_USE_AI_MODE=hybrid

# Admin Authentication
# Generate a secure random string for production (use: openssl rand -base64 32)
ADMIN_SECRET_KEY=your_super_secret_admin_key_here_change_this_in_production

# MongoDB Connection (if using MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
